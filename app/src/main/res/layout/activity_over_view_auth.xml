<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.OverViewAuth">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"



            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginHorizontal="20dp"
                app:lottie_rawRes="@raw/travelling_animation"



            app:lottie_loop="true"

            app:lottie_autoPlay="true" />
<!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="400dp"-->

<!--                android:scaleType="fitStart"-->
<!--                app:srcCompat="@drawable/travel_together" />-->



            <Button
                android:id="@+id/loginButtonOverview"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@id/animation_view"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textSize="23dp"
                android:padding="5dp"


                />

            <TextView
                android:id="@+id/text_view_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/loginButtonOverview"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:text="OR" />

            <Button
                android:id="@+id/registerButtonOverview"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginButtonOverview"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textSize="23sp"
                android:padding="5dp"

                style="?attr/materialButtonOutlinedStyle"
                />

        </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>