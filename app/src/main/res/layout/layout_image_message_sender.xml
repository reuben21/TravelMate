<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImageViewHolderSender"
        style="@style/CustomCardViewStyle2"
        android:layout_width="320dp"
        android:layout_height="320dp"

        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        app:strokeColor="@color/primaryLightColor">

        <com.google.android.material.card.MaterialCardView

            android:layout_width="285dp"
            android:layout_height="285dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"

            app:strokeColor="@color/primaryLightColor">

            <ImageView
                android:id="@+id/textMessageImageSender"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                android:src="@drawable/shrute_farms" />
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textMessageTimeSenderImage"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardImageViewHolderSender"
        android:layout_gravity="bottom"
        android:layout_toLeftOf="@id/cardImageViewHolderSender"
        android:text="TextView"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>